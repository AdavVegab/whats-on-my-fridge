
<IngredientsScreen@MDBottomNavigationItem>:
    name: "ingredients"
    text: "Ingredients"
    icon: "food-variant"
    BoxLayout:
        orientation: 'vertical'        
        MDToolbar:
            title: "What's in my Fridge?"
            right_action_items: [["playlist-plus", lambda x: app.add_popup.open()]]
            left_action_items: [["food-variant", lambda x: app.add_popup.open()]]
        ScrollView:
            scroll_timeout : 1000
            MDList:
                id: md_list
                padding: 10
                spacing: 5
            
            
<ContentNavigationDrawer>:

    ScrollView:
        MDList:
            OneLineAvatarIconListItem:
                text: "What can I cook?"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "dashboard"
                IconLeftWidget:
                    icon: "view-dashboard"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "dashboard"

            OneLineAvatarIconListItem:
                text: "What's in my Fridge?"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "ingredients"
                IconLeftWidget:
                    icon: "food-variant"
                    on_press:
                        root.nav_drawer.set_state("close")
                        root.screen_manager.current = "ingredients"

<RootScreenManagement@NavigationLayout>:
    ScreenManager:
        id: screen_manager
        Screen:
            # DASHBOARD
            id: dashboard
            name: "dashboard"
            text: "Dashboard"
            icon: "view-dashboard"
            on_enter:
                app.search_for_recipes()
            BoxLayout:
                orientation: 'vertical'        
                MDToolbar:
                    title: 'Hungry?'
                    left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                    right_action_items: [["refresh", lambda x: app.search_for_recipes()]]
                ScrollView:
                    scroll_timeout : 1000
                    MDList:
                        id: md_list_recipe
                        padding: 10
                        spacing: 5
        Screen:
            # INGREDIENTS
            name: "ingredients"
            text: "Ingredients"
            icon: "food-variant"
            on_enter:
                app.update_ingredients()
            BoxLayout:
                orientation: 'vertical'        
                MDToolbar:
                    title: "What's in my Fridge?"
                    left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                    right_action_items: [["playlist-plus", lambda x: root.add_items()]]
                ScrollView:
                    scroll_timeout : 1000
                    MDList:
                        id: md_list
                        padding: 10
                        spacing: 5
        
        Screen:
            # Add Ingredients
            name: 'item_detail'
            FloatLayout:
                size: self.parent.size
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        title: "What's in my Fridge?"
                        left_action_items: [['arrow-left', lambda x: root.to_ingredients()]]
                    BoxLayout:
                        size: self.parent.size
                        padding: 100
                        orientation: 'vertical'
                        MDLabel:
                            
                            text: "Add a Product"
                            halign: 'center'
                        MDTextFieldRound:
                            id: new_ingredient
                            icon_left: "food-variant"
                            hint_text: "What's going in the fridge?"
                            color_active: 0.9, 0.9, 0.9, 1
                            current_hint_text_color: 0.5, 0.5, 0.5, 1
                        BoxLayout:
                
                MDFloatingActionButton:
                    icon: "plus"
                    size_hint: None, None
                    right: self.width and root.right - 40
                    y: 40
                    md_bg_color: app.theme_cls.primary_color
                    on_release:
                        app.add_ingredient()
    
    MDNavigationDrawer:
        id: nav_drawer

        ContentNavigationDrawer:
            screen_manager: screen_manager
            nav_drawer: nav_drawer
<RecipeCard@MDCard>:
    orientation: "horizontal"
    size_hint: 1, None
    size: "280dp", "200dp"
    radius: [20]
    on_release: app.open_recipe(root.recipe)

    MDBoxLayout:
        size: "260dp", "200dp"
        size_hint: None, None
        AsyncImage:
            id: async_img            
            allow_stretch: True
            keep_ratio: False

    MDBoxLayout:
        padding: 10
        orientation: 'vertical'
        MDLabel:
            text: root.title
            haling: 'center'
            theme_text_color: "Secondary"
            height: self.texture_size[1]
            size_hint_y: None
            font_style: 'H6'
        MDLabel:
            text: root.summary
            haling: 'left'
            theme_text_color: "Secondary"
            height: self.texture_size[1]
            size_hint_y: 0.3
            font_style: 'Body1'
            theme_text_color: "Hint"
        MDLabel:
            haling: 'center'
            theme_text_color: "Secondary"
            height: self.texture_size[1]
            size_hint_y: 0.3
            font_style: 'Subtitle1'
            text: 'Missing:'
        
        StackLayout:
            spacing: 3
            id: chip_layout
    MDIconButton:
        id: favorite_mark
        icon: "heart-outline"
        
        theme_text_color: "Custom"
        text_color : 0,0,0,1
        on_release: app.toggle_favorite_recipe(root)


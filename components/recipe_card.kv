<RecipeSummaryCard@MDCard>:
    orientation: "horizontal"
    padding: "8dp"
    size_hint: 1, None
    size: "280dp", "500dp"
    on_release: app.open_recipe(root.recipe)

    AsyncImage:
        source: root.source_img
        id: async_img
        size_hint: None, 1
        size: "280dp", "280dp"
    BoxLayout:
        orientation: 'vertical'        
        MDLabel:
            id: summary
            haling: 'left'
            theme_text_color: "Secondary"
            height: self.texture_size[1]
            size_hint_y: 0.05
            font_style: 'Body1'
            theme_text_color: "Hint"

        BoxLayout:
            padding:10          
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: root.text
                    haling: 'center'
                    theme_text_color: "Secondary"
                    height: self.texture_size[1]
                    size_hint_y: 0.2
                    font_style: 'Subtitle1'
                    text: 'Missing:'
                
                StackLayout:
                    spacing: 3
                    id: chip_layout_missing
            
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: root.text
                    haling: 'center'
                    theme_text_color: "Secondary"
                    height: self.texture_size[1]
                    size_hint_y: 0.3
                    font_style: 'Subtitle1'
                    text: 'Aviable:'
                
                StackLayout:
                    spacing: 3
                    id: chip_layout_aviable


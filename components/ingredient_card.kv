<IngredientCard@MDCard>:
    orientation: "vertical"
    size_hint: None, None
    size: "150dp", "150dp"
    radius: [10]
    MDBoxLayout:
        padding: "9dp"
        
        size_hint: 1, 0.7
        AsyncImage:
            id: async_img
            source: root.image_url
            height: root.height * 0.7

    MDBoxLayout:
        size_hint: 1, 0.3
        padding: "5dp"
        MDLabel:
            text: root.label
            size_hint_x: 0.7
            theme_text_color: "Secondary"
            font_style: "Button" 
            valign: "center"
            halign: "center"

        MDIconButton:
            size_hint_x: 0.3
            icon: "delete"
            on_release: app.delete_ingredient(root)

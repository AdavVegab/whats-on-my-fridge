<IngredientCard@MDCard>:
    orientation: "horizontal"
    padding: "8dp"
    size_hint: 1, None
    size: "280dp", "60dp"

    AsyncImage:
        id: async_img

    MDLabel:
        text: root.text
        theme_text_color: "Secondary"
        size_hint_y: 1
        height: self.texture_size[1]

    MDIconButton:
        icon: "delete"
        on_release: app.delete_ingredient(root)
